<%= form_with(model: [portfolio, portfolio.assets.build]) do |f| %>
    <%= f.label :ticker, "Ticker Symbol", class:"form-label"%>
    <%= f.text_field :ticker, class:"form-control" %>

    <%= f.label :desired_weight, "Desired Weight (%)", class:"form-label" %>
    <%= f.number_field :desired_weight, class:"form-control" %>

    <button type="submit" class="btn btn-success mt-3">
        <i class="bi bi-plus-circle-fill"></i> Add
    </button>
<% end %>