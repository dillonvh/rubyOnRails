<div >
  <div  id="<%= dom_id post %>" class="card">
    <div class="card-body">
      <h2 class="card-title">
        <%= post.title %>
      </h2>
      <h5 class="mb-3">
        Posted by <%= link_to "#{post.user.first_name} #{post.user.last_name}", user_path(post.user.id) %>
      </h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">
        <%= pluralize(post.views, "view") %>
      </h6>
      <p class="card-text">
        <%= post.body %>
      </p>
    </div>
  </div>
</div>