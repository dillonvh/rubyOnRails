<div  id="<%= dom_id post %>" class="card">
  <div class="card-body">
    <h3 class="card-title">
      <%= post.title %>
    </h3>
    <h5 class="mb-3">
      <%= post.user.email %>
    </h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">
      <%= pluralize(post.views, "view") %>
    </h6>
    <p class="card-text">
      <%= post.body %>
    </p>
  </div>
</div>