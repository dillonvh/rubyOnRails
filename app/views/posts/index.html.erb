<div class="container">

  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Posts" %>

  <h1>Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <div class="btn-group mx-4 mt-2 mb-4" role="group" aria-label="Post Actions">
        <%= link_to "Show this post", post, :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>
