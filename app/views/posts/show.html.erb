<p style="color: green"><%= notice %></p>
<div class="container">
  <div class ="row">
    <div class="col-sm ps-0">
      <%= link_to posts_path, :class => "btn btn-secondary mb-2" do %>
        <i class="bi bi-chevron-double-left"></i> Back
      <% end %>
    </div>
  </div>

  <div class="row my-2">
    <%= render @post %>
  </div>

  <% if current_user && current_user.id == @post.user_id %>
  <div class="row">
    <div class="col-sm ps-0">
      <%= link_to edit_post_path(@post), :class => "btn btn-primary mb-2" do %>
        <i class="bi bi-pencil-fill"></i> Edit
      <% end %> 
      <%= button_to @post, method: :delete, :class => "btn btn-danger mb-2", form_class: "inlineButton" do %>
        <i class="bi bi-trash-fill"></i> Delete
      <% end %>
    </div>
  </div>
  <% end %>

</div>
